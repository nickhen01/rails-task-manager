<%= form_for @task do |f| %>
  <%= f.label :title, "Name of the task" %>
  <%= f.text_field :title %>

  <%= f.label :details, "Enter details" %>
  <%= f.text_field :details %>

  <% if !@task.new_record?() %>
    <%= f.label "Mark as completed" %>
    <%= f.check_box :completed %>
  <% end%>

  <%= f.submit %>
<% end %>
