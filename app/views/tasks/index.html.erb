<div class="container">
  <h1 class="">My tasks</h1>
  <ul style="list-style: none;">
    <% @tasks.each do |task| %>
      <li><input type="checkbox" <%="checked" if task.completed%>> <%= link_to task.title, task_path(task) %></li>
      <%= link_to "Remove this task", task_path(task), method: "delete", data: {confirm: "Are you sure"} %>
    <% end %>
  </ul>
  <%= link_to 'Create new task', new_path%>
</div>
